<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:showIn="@layout/activity_main"
    android:minWidth="25px"
	android:minHeight="25px">

  <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:id="@+id/textView1" />

	<Button
		android:id="@+id/resetAll"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textAllCaps="false"
        android:text="Reset All" />

  <Button
		android:id="@+id/fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dip"
        android:textAllCaps="false"
        android:text="Draw Division" />

    #### Division Details####  

    <Spinner  
        android:id="@+id/divisionComboBox"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:spinnerMode="dialog"
        android:layout_below="@id/fab"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dip" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignTop="@id/divisionComboBox"
        android:layout_toLeftOf="@id/divisionComboBox"
        android:textStyle="bold"
        android:visibility="invisible"
        android:id="@+id/divisionView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divisionView"
        android:text=""
        android:layout_marginTop="5dip"
        android:layout_alignLeft="@id/divisionView"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:id="@+id/teamList" />

    #### Violate Buttons ####

    <Button
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamList"
        android:layout_marginTop="3dip"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:text="Player 1 - Violate" />

  <Button
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player1"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:text="Player 2 - Violate" />

  <Button
        android:id="@+id/player3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player2"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:text="Player 3 - Violate" />

  <Button
        android:id="@+id/player4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player3"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:text="Player 4 - Violate" />
  
  #### Player Team Text ####

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/player1"
    android:text=""
    android:textStyle="bold"
    android:visibility="invisible"
    android:id="@+id/player1Team" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/player2"
    android:text=""
    android:textStyle="bold"
    android:visibility="invisible"
    android:id="@+id/player2Team" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/player3"
    android:text=""
    android:textStyle="bold"
    android:visibility="invisible"
    android:id="@+id/player3Team" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/player4"
    android:text=""
    android:textStyle="bold"
    android:visibility="invisible"
    android:id="@+id/player4Team" />

  #### Hide Buttons ####

  <ToggleButton
    android:id="@+id/player1TeamHide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@id/player1Team"
    android:layout_marginLeft="5dip"
    android:textAllCaps="false"
    android:visibility="invisible"
    android:textOn="Show" 
    android:textOff="Hide" />

  <ToggleButton
    android:id="@+id/player2TeamHide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@id/player2Team"
    android:layout_marginLeft="5dip"
    android:textAllCaps="false"
    android:visibility="invisible"
    android:textOn="Show" 
    android:textOff="Hide" />

  <ToggleButton
    android:id="@+id/player3TeamHide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@id/player3Team"
    android:layout_marginLeft="5dip"
    android:textAllCaps="false"
    android:visibility="invisible"
    android:textOn="Show" 
    android:textOff="Hide" />

  <ToggleButton
    android:id="@+id/player4TeamHide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@id/player4Team"
    android:layout_marginLeft="5dip"
    android:textAllCaps="false"
    android:visibility="invisible"
    android:textOn="Show" 
    android:textOff="Hide" />

  #### Safa Buttons ####

  <ToggleButton 
    android:id="@+id/player1TeamSafa" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textOn="Safa ON" 
    android:textOff="Safa OFF" 
    android:layout_alignParentLeft="true"
    android:layout_alignTop="@id/player1Team"
    android:layout_marginLeft="5dip"
    android:visibility="invisible"
    android:textAllCaps="false" />

  <ToggleButton 
    android:id="@+id/player2TeamSafa" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textOn="Safa ON" 
    android:textOff="Safa OFF" 
    android:layout_alignParentLeft="true"
    android:layout_alignTop="@id/player2Team"
    android:layout_marginLeft="5dip"
    android:visibility="invisible"
    android:textAllCaps="false" />

  <ToggleButton 
    android:id="@+id/player3TeamSafa" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textOn="Safa ON" 
    android:textOff="Safa OFF" 
    android:layout_alignParentLeft="true"
    android:layout_alignTop="@id/player3Team"
    android:layout_marginLeft="5dip"
    android:visibility="invisible"
    android:textAllCaps="false" />

  <ToggleButton 
    android:id="@+id/player4TeamSafa" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textOn="Safa ON" 
    android:textOff="Safa OFF" 
    android:layout_alignParentLeft="true"
    android:layout_alignTop="@id/player4Team"
    android:layout_marginLeft="5dip"
    android:visibility="invisible"
    android:textAllCaps="false" />


  <Button
    android:id="@+id/ResetButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/player4"
    android:textAllCaps="false"
    android:visibility="invisible"
    android:text="New Round" />

  <Button
    android:id="@+id/GamesDraw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/ResetButton"
    android:layout_alignParentRight="true"
    android:textAllCaps="false"
    android:visibility="invisible"
    android:text="View Games Draw" />

  <CheckBox android:id="@+id/keepProtocolGameCheckbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@id/GamesDraw"
    android:layout_marginRight="5dip"
    android:visibility="invisible"
    android:text="Start With Protocol" />

</RelativeLayout>
